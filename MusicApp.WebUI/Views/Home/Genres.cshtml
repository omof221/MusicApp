                                    <a href="#" class="btn btn-sm btn-white m-1">Jazz</a>
                                    <a href="#" class="btn btn-sm btn-white m-1">Pop</a>
                                    <a href="#" class="btn btn-sm btn-white m-1">Rock</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="py-4">
                        <h5 class="text-highlight mb-3">🎶 Dineleme Alışkanlığınıza Göre Oluşturulmuş Kişisel Dinleme Listeniz</h5>
                        <div class="row row-lg">

                            @if (Model.LevelSongs != null && Model.LevelSongs.Any())
                            {
                                @foreach (var song in Model.LevelSongs)
                                {
                                    <div class="col-6 col-sm-4 col-md-3 col-lg-2" data-id="@song.Id" data-category="@song.Genre" data-tag="@song.Level">
                                        <div class="list-item list-hover r mb-5">
                                            <div class="media">
                                                <a href="#" class="media-content play-song"
                                                   data-id="@song.Id"
                                                   style="background-image:url('@song.CoverUrl'); background-size:cover; background-position:center;">
                                                </a>
                                                <div class="media-action media-action-overlay">
                                                    <button class="btn btn-icon no-bg no-shadow hide-row" data-toggle-class>

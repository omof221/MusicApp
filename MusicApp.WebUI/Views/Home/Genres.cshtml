    <script src="/Bepop/assets/js/theme.js"></script>

    <script>
        // DOM yüklendiğinde çalış
        document.addEventListener("DOMContentLoaded", function () {
            const token = '@Context.Session.GetString("token")';
            if (!token) {
                console.warn("⚠️ Token bulunamadı. Dinleme kayıtları çalışmayabilir.");
            }

            // Çalma butonlarına tıklama olayını ekleyen fonksiyon
            function attachPlayListeners() {
                document.querySelectorAll(".play-song").forEach(btn => {
                    // Butona daha önce event eklenmemişse ekle (pjax kaynaklı çift eklemeyi önle)
                    if (!btn.hasAttribute('data-listener-attached')) {
                        btn.setAttribute('data-listener-attached', 'true');
                        btn.addEventListener("click", async (e) => {
                            e.preventDefault();
                            const songId = btn.dataset.id;

                            if (!token) {
                                console.error("❌ Dinleme kaydı için token yok.");
                                return;
                            }

                            console.log("▶️ Oynatılıyor (kayıt gönderiliyor):", songId);
                            try {
                                await fetch(`https://localhost:7273/api/songs/play/${songId}`, {
                                    method: "POST",
                                    headers: { "Authorization": `Bearer ${token}` }
                                });
                                console.log("✅ Dinleme kaydedildi:", songId);
                            } catch (err) {
                                console.error("❌ Dinleme kaydı hatası:", err);
                            }
                        });
                    }
                });
            }

            // Sayfa ilk yüklendiğinde butonlara event'leri ekle
            attachPlayListeners();

            // Örnek şablonda pjax kütüphanesi var.
            // Sayfa pjax ile (ajax) yüklendiğinde butonlar yenileneceği için event'leri tekrar eklememiz gerekir.
            if (window.pjax) {
                document.addEventListener('pjax:complete', attachPlayListeners);
            }
        });
    </script>

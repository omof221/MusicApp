    <script>
        document.getElementById("searchBox").addEventListener("input", function () {
            const query = this.value.toLowerCase().trim();
            const songItems = document.querySelectorAll(".song-item");
            const noResultDiv = document.querySelector(".no-result");
            let found = false;

            songItems.forEach(item => {
                const titleElement = item.querySelector(".list-title");
                const artistElement = item.querySelector(".list-subtitle");
                const title = titleElement ? titleElement.innerText.toLowerCase() : "";
                const artist = artistElement ? artistElement.innerText.toLowerCase() : "";

                const isMatch = title.includes(query) || artist.includes(query);
                item.style.display = isMatch ? "" : "none";
                if (isMatch) {
                    found = true;
                }
            });

            // "Sonuç bulunamadı" mesajını göster/gizle
            if (noResultDiv) {
                 noResultDiv.classList.toggle('hide', found); // Eğer bulunduysa 'hide' sınıfını ekle, bulunamadıysa kaldır
            }

            // Eğer model başlangıçta boşsa gösterilen mesajı arama yapıldığında gizle
             const initialEmptyMessage = document.querySelector('.alert:not(.no-result)');
             if (initialEmptyMessage && query !== '') {
                 initialEmptyMessage.style.display = 'none';
             } else if (initialEmptyMessage && query === '' && @Model.Count() == 0) {
                 initialEmptyMessage.style.display = 'block'; // Arama kutusu boşsa ve model boşsa ilk mesajı göster
                 if(noResultDiv) noResultDiv.classList.add('hide'); // no-result mesajını gizle
             }


        });
    </script>
